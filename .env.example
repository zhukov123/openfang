# Discord Bot
DISCORD_TOKEN=           # Discord bot token (from Developer Portal)

# Anthropic
ANTHROPIC_API_KEY=       # Anthropic API key (official API mode)
ANTHROPIC_AUTH_TOKEN=    # Claude setup-token / bearer token (optional alternative auth)
ANTHROPIC_BASE_URL=      # Optional Anthropic-compatible gateway URL (default: https://api.anthropic.com)

# OpenAI / Codex
OPENAI_API_KEY=          # OpenAI API key (used when OPENAI_AUTH_MODE=api_key)
OPENAI_BASE_URL=         # Optional OpenAI-compatible base URL (default: https://api.openai.com/v1)
OPENAI_AUTH_MODE=api_key # api_key | codex
CODEX_AUTH_FILE=~/.codex/auth.json   # Used when OPENAI_AUTH_MODE=codex (from `codex login`)

# Brave Search
BRAVE_SEARCH_API_KEY=    # Brave Search API key (https://brave.com/search/api/)

# Web UI
WEB_PORT=3000            # Web UI + API port
WEB_AUTH_PASSWORD=       # Optional: password for web UI access
